{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "outDir": "./build",
        "rootDir": "./src",
        "declaration": false,
        "noImplicitAny": true,
        "typeRoots": ["./node_modules/@types"],
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "exclude": ["./build/*", "./node_modules/*"],
    "include": ["./src/**/*.ts", "./src/**/*.yaml"],
}